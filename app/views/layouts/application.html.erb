<!DOCTYPE html>
<html>
<head>
  <title>BookReview</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>


<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <%= link_to "Book Review", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
        <% if user_signed_in? %>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
      <% else %>
        <li><%= link_to "Login", new_user_session_path, class: 'nav-link' %></li>
      <% end %>

      </li>
    </ul>

    <ul class="nav navbar-nav mr-0">
      <% if user_signed_in? %>
        <li><%= link_to "Add Book", new_book_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container-fluid">

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

</div>
</body>
</html>
